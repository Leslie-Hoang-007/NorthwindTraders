@model NorthwindTraders.Controllers.PaginatedList<Order>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{
    var prevDisabled = Model.HasPreviousPage ? "" : "disabled";// have prev page? false then disable
    var nextDisabled = Model.HasNextPage ? "" : "disabled";// have next page? false then disabled
}
<a asp-action="Index" class="btn btn-primary" asp-route-pageSize="5">5 Orders Per Page</a>
<a asp-action="Index" class="btn btn-primary" asp-route-pageSize="10">10 Orders Per Page</a>
<a asp-action="Index" class="btn btn-primary" asp-route-pageSize="20">20 Orders Per Page</a>
<ul class="pagination">
    <li class="page-item @prevDisabled">
        <a asp-action="Index"
           asp-route-sortOrder="@ViewBag.CurrentSort"
           asp-route-currentSearch="@ViewBag.CurrentSearch"
           asp-route-pageNumber="1"
           class="page-link">First</a>
    </li>
    <li class="page-item @prevDisabled">
        <a asp-action="Index"
           asp-route-sortOrder="@ViewBag.CurrentSort"
           asp-route-currentSearch="@ViewBag.CurrentSearch"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           class="page-link">Previous</a>
    </li>
    <li class="page-item @nextDisabled">
        <a asp-action="Index"
           asp-route-sortOrder="@ViewBag.CurrentSort"
           asp-route-currentSearch="@ViewBag.CurrentSearch"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           class="page-link">Next</a>
    </li>
    <li class="page-item @nextDisabled">
        <a asp-action="Index"
           asp-route-sortOrder="@ViewBag.CurrentSort"
           asp-route-currentSearch="@ViewBag.CurrentSearch"
           asp-route-pageNumber="@Model.TotalPages"
           class="page-link">Last</a>
    </li>
</ul>


<table class="table">
    <thead>
        <tr>
            <th>
                 Customer
            </th>

            <th>
                Ordered
            </th>
       
            <th>
                Shipped
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.FirstOrDefault().Freight)
            </th>
            <th>
                Shipper
            </th>
     
        
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
                <td class ="text-end">
                @Html.DisplayFor(modelItem => item.Freight)
            </td>
      

                <td>
                    @Html.DisplayFor(modelItem => item.ShipVia)
                </td>
        </tr>
}
    </tbody>
</table>
